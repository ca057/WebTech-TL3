# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()


GET		/addmodule					controllers.ModuleCtrl.newModule()
POST	/							controllers.ModuleCtrl.addModule()
GET		/editmodule					controllers.ModuleCtrl.changeModule()
POST	/editmodule/:id/edit		controllers.ModuleCtrl.editModule(id: Int)
POST	/editmodule/:id/delete		controllers.ModuleCtrl.deleteModule(id: Int)

GET		/addresult					controllers.ResultCtrl.newResult()
POST	/							controllers.ResultCtrl.addResult()
GET		/editresult					controllers.ResultCtrl.changeResult()
POST	/editresult/:id/edit		controllers.ResultCtrl.editResult(id: Int)
POST	/editresult/:id/delete		controllers.ResultCtrl.deleteResult(id: Int)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
